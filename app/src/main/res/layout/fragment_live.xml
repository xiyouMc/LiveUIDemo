<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">
    <LinearLayout
            android:id="@+id/users_container"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="bottom">
            <LinearLayout
                    android:layout_marginLeft="7dp"
                    android:id="@+id/room_usernum_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                    <ImageView
                            android:id="@+id/img_room_creator"
                            android:src="@drawable/user_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                </RelativeLayout>
                <LinearLayout
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/txt_roomtype"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:text="直播Live"
                            android:textSize="5pt"/>
                    <TextView
                            android:id="@+id/txt_usernum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="999"
                            android:textSize="5pt"
                            android:layout_marginLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <top.codemc.liveappuidemo.view.UsersContainerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/listview_users"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    style="@style/UserContainerView"
                    app:usercontainer_layoutManager="ListLayoutManager"
            ></top.codemc.liveappuidemo.view.UsersContainerView>
        </LinearLayout>
    </LinearLayout>

    <ListView
            android:id="@+id/live_chatlist"
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:layout_above="@+id/input_board"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:transcriptMode="alwaysScroll"/>

    <TextView
            android:id="@+id/new_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/input_board"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/livechat_new_message_bg"
            android:padding="10dp"
            android:text="@string/live_new_message"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/input_board"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="150dp"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/gift_flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/u1f339"/>

        <ImageView
                android:id="@+id/gift_applaud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/u1f44f"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

        <Button
                android:id="@+id/test_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="不计数不存库"/>

        <Button
                android:id="@+id/test_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="存库不计数"/>

        <Button
                android:id="@+id/test_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="存库计数"/>

        <Button
                android:id="@+id/test_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="状态"/>
    </LinearLayout>

    <EditText
            android:id="@+id/input_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>