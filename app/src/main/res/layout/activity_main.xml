<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="top.codemc.liveappuidemo.MainActivity">

    <Button android:id="@+id/create_live_bt"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="创建直播"/>
    <Button android:id="@+id/play_live_bt"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="观看直播"
            android:layout_below="@id/create_live_bt"/>
    <Button android:id="@+id/show_userinfo"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="展示个人信息"
            android:layout_below="@id/play_live_bt"/>

    <Button android:id="@+id/gird_view_gift"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="打开礼物列表"
            android:layout_below="@id/show_userinfo"/>
    <Button android:id="@+id/live_over"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="直播结束"
            android:layout_below="@id/gird_view_gift"/>

    <Button android:id="@+id/viewpage_btn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="ViewPage"
            android:layout_below="@id/live_over"/>
    <Button android:id="@+id/live_anim"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="直播动画"
            android:layout_below="@id/viewpage_btn"/>
    <Button android:id="@+id/charge"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="充值"
            android:layout_below="@id/live_anim"/>
    <Button android:id="@+id/activity_time_count_down"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="倒计时"
            android:layout_below="@id/charge"/>
    <Button android:id="@+id/heart_btn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="心形动画"
            android:layout_below="@id/live_anim"/>
    <EditText android:layout_width="match_parent" android:layout_height="100dp"
              android:layout_below="@id/live_over"
              android:hint="aaa"
              android:layout_alignParentBottom="true"
    />
    <TextView android:id="@+id/test_text"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="x1234567890"
              android:layout_alignParentRight="true"
              android:textSize="25sp"/>

    <com.vivavideo.mobile.commonui.HoloCircularProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"/>
</RelativeLayout>
