<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="top.codemc.liveappuidemo.MainActivity">

    <Button android:id="@+id/create_live_bt"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="创建直播"/>
    <Button android:id="@+id/play_live_bt"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="观看直播"
            android:layout_below="@id/create_live_bt"/>
    <Button android:id="@+id/show_userinfo"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="展示个人信息"
            android:layout_below="@id/play_live_bt"/>

    <Button android:id="@+id/gird_view_gift"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="打开礼物列表"
            android:layout_below="@id/show_userinfo"/>
</RelativeLayout>
